generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// TODO: Run 'npx prisma db pull' once DATABASE_URL is set to auto-generate models
// This placeholder ensures 'npx prisma generate' works for now if needed.

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
}
